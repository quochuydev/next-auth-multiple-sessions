datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Session {
    id           String    @id @default(uuid())
    authSession  String
    issuer       String
    accessToken  String
    tokenType    String
    expiresIn    Int //miliseconds
    refreshToken String?
    idToken      String?
    userId       String?
    user         User?     @relation(fields: [userId], references: [id])
    createdAt    DateTime  @default(now())
    deletedAt    DateTime?
}

model User {
    id                String    @id @default(uuid())
    sub               String?
    name              String?
    preferredUsername String?
    email             String?
    emailVerified     Boolean?
    createdAt         DateTime  @default(now())
    Session           Session[]
}
